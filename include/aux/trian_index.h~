#ifndef TRIAN_INDEX_H
#define TRIAN_INDEX_H


namespace intlag {


#define INDEX_TRIAN_UP(n,i,j) ( (i)*(2*(n)-(i)+1)/2 + (j) - (i) )
#define INDEX_TRIAN_DOWN(n,i,j) ( ((i)*(i)+(i))/2 + (j) )


} // namespace intlag
#endif



